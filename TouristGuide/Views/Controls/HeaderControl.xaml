<UserControl x:Class="TouristGuide.Views.Controls.HeaderControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TouristGuide.Views.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="800"
             Background="White">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="auto"/>
        </Grid.ColumnDefinitions>
        <Viewbox Stretch="Uniform">
            <TextBlock Grid.Column="0"
                Text="Туристический Гид по интересным местам мира"
                VerticalAlignment="Center"
                HorizontalAlignment="Left"
                Margin="10"
                TextWrapping="Wrap"
                FontWeight="Bold"
                FontSize="20"/>
        </Viewbox>
        <StackPanel Orientation="Horizontal" Grid.Column="1">
            <StackPanel x:Name="UserInfoPanel"
                    Grid.Column="1"
                    Orientation="Horizontal"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Right"
                    Margin="10"
                    Visibility="Collapsed">
                <Image Source="/Resources/Images/UserIcon.png"
                   Width="30"
                   Height="30"
                   Margin="10"
                   x:Name="UserImage"/>
                <TextBlock x:Name="UserNameText"
                       Text="Иванов Иван"
                       VerticalAlignment="Center"/>
            </StackPanel>
            <Button
                x:Name="AuthButton"
                Content="Вход"
                FontSize="15"
                VerticalAlignment="Center"
                HorizontalAlignment="Right"
                Margin="10"
                Padding="10, 5"
                Click="AuthButton_Click"/>
        </StackPanel>        
    </Grid>
</UserControl>
