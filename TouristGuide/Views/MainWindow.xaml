<Window x:Class="TouristGuide.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TouristGuide"
        xmlns:Control="clr-namespace:TouristGuide.Views.Controls"
        mc:Ignorable="d"
        Title="Туристический гид" 
        Height="800" Width="1200"
        MinHeight="600" MinWidth="800"
        MaxHeight="1000" MaxWidth="1600">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="6*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="6*"/>
        </Grid.RowDefinitions>
        <Image Grid.Row="0" Grid.Column="0"
               Source="/Resources/Images/EarthTuristIcon.png"
               Stretch="Uniform"
               HorizontalAlignment="Stretch"
               VerticalAlignment="Stretch"/>
        <Control:HeaderControl Grid.Row="0" Grid.Column="1"/>
    </Grid>
</Window>
