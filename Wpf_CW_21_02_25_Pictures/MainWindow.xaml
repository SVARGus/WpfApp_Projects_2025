<Window x:Class="class_work_21._02._25.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:class_work_21._02._25"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="600">
    <Grid Background="Aqua">
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <DockPanel Grid.Column="1" Grid.Row="0">
            <StackPanel DockPanel.Dock="Bottom" VerticalAlignment="Bottom">
                <Button Height="40" Width="40" Background="Gray">*</Button>
                <Button Height="20" Width="140" Background="Red">*</Button>
                <Button Height="20" Width="160" Background="Red">*</Button>
                <Button Height="20" Width="180" Background="Red">*</Button>
                <Button Height="20" Width="200" Background="Red">*</Button>
            </StackPanel>
        </DockPanel>
        <Grid Grid.Column="0" Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <DockPanel Grid.Column="1" Grid.Row="0">
                <StackPanel DockPanel.Dock="Bottom" VerticalAlignment="Bottom">
                    <Button Height="10" Width="15" Background="Green">*</Button>
                    <Button Height="10" Width="30" Background="Green">*</Button>
                    <Button Height="10" Width="45" Background="Green">*</Button>
                    <Button Height="10" Width="60" Background="Green">*</Button>
                </StackPanel>
            </DockPanel>
            <DockPanel Grid.Column="0" Grid.Row="1">
                <StackPanel DockPanel.Dock="Bottom" VerticalAlignment="Bottom">
                    <Button Height="10" Width="15" Background="Green">*</Button>
                    <Button Height="10" Width="30" Background="Green">*</Button>
                    <Button Height="10" Width="45" Background="Green">*</Button>
                    <Button Height="10" Width="60" Background="Green">*</Button>
                </StackPanel>
            </DockPanel>
            <DockPanel Grid.Column="1" Grid.Row="2">
                <StackPanel DockPanel.Dock="Bottom" VerticalAlignment="Bottom">
                    <Button Height="10" Width="15" Background="Green">*</Button>
                    <Button Height="10" Width="30" Background="Green">*</Button>
                    <Button Height="10" Width="45" Background="Green">*</Button>
                    <Button Height="10" Width="60" Background="Green">*</Button>
                </StackPanel>
            </DockPanel>
        </Grid>
        <DockPanel Grid.Column="1" Grid.Row="1">
            <Button DockPanel.Dock="Top" Background="Gray">*</Button>
            <Button DockPanel.Dock="Bottom" Background="Gray">*</Button>
            <Button DockPanel.Dock="Left" Background="Gray">***</Button>
            <Button DockPanel.Dock="Right" Background="Gray">***</Button>
            <Button DockPanel.Dock="Top" Background="GreenYellow">
                <Canvas>
                    <Button Canvas.Left="40" Canvas.Bottom="40">(*****)</Button>
                    <Button Canvas.Right="40" Canvas.Bottom="40">(*****)</Button>
                    <Button Canvas.Right="-40" Canvas.Top="40">==========</Button>
                </Canvas>
            </Button>
        </DockPanel>
        <Grid Grid.Row="2" Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition Width="2*"></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="1" Background="Red"></Grid>
        </Grid>
        <Grid Grid.Column="2" Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <Button Grid.Column="0" Grid.Row="0" Background="Red"></Button>
            <Button Grid.Column="2" Grid.Row="0" Background="Red"></Button>
            <Button Grid.Column="0" Grid.Row="2" Background="Red"></Button>
            <Button Grid.Column="2" Grid.Row="2" Background="Red"></Button>
            <Button Grid.Column="1" Grid.Row="0" Background="Yellow"></Button>
            <Button Grid.Column="1" Grid.Row="2" Background="Yellow"></Button>
            <Button Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="3" Background="Yellow"></Button>
        </Grid>
    </Grid>
</Window>
