<Window x:Class="Class_work_p2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Class_work_p2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition Width="3*"></ColumnDefinition>
            <ColumnDefinition ></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0">
            <Grid.Background>
                <ImageBrush ImageSource="pictures/left-Photoroom.png"
                            Stretch="Uniform"
                            AlignmentX="Center"
                            AlignmentY="Center"></ImageBrush>
            </Grid.Background>
        </Grid>
        <Grid Grid.Column="2">
            <Grid.Background>
                <ImageBrush ImageSource="pictures/right-Photoroom.png"
                    Stretch="Uniform"
                    AlignmentX="Center"
                    AlignmentY="Center"></ImageBrush>
            </Grid.Background>
        </Grid>
        <StackPanel Grid.Column="1">
            <Label HorizontalAlignment="Center">Тест на знание смешариков</Label>
            <Label HorizontalAlignment="Center">Как зовут самого умного смешарика?</Label>
            <GroupBox>
                <GroupBox.Style>
                    <Style TargetType="GroupBox">
                        <Setter Property="BorderThickness" Value="0" />
                        <Setter Property="Padding" Value="5" />
                    </Style>
                </GroupBox.Style>
                <WrapPanel HorizontalAlignment="Center">
                    <RadioButton Margin="20,0,0,0">Крош</RadioButton>
                    <RadioButton Margin="20,0,0,0">Ёжик</RadioButton>
                    <RadioButton Margin="20,0,0,0">Барашь</RadioButton>
                    <RadioButton Margin="20,0,0,0">Совунья</RadioButton>
                    <RadioButton Margin="20,0,0,0">Лосяшь</RadioButton>
                </WrapPanel>
            </GroupBox>
            <Label HorizontalAlignment="Center">Кто из смешариков любит приключения?</Label>
            <GroupBox>
                <GroupBox.Style>
                    <Style TargetType="GroupBox">
                        <Setter Property="BorderThickness" Value="0" />
                        <Setter Property="Padding" Value="5" />
                    </Style>
                </GroupBox.Style>
                <WrapPanel HorizontalAlignment="Center">
                    <RadioButton Margin="20,0,0,0">Крош</RadioButton>
                    <RadioButton Margin="20,0,0,0">Ёжик</RadioButton>
                    <RadioButton Margin="20,0,0,0">Барашь</RadioButton>
                    <RadioButton Margin="20,0,0,0">Совунья</RadioButton>
                    <RadioButton Margin="20,0,0,0">Лосяшь</RadioButton>
                </WrapPanel>
            </GroupBox>
            <Label HorizontalAlignment="Center">Какой смешарик всегда готов помочь?</Label>
            <GroupBox>
                <GroupBox.Style>
                    <Style TargetType="GroupBox">
                        <Setter Property="BorderThickness" Value="0" />
                        <Setter Property="Padding" Value="5" />
                    </Style>
                </GroupBox.Style>
                <WrapPanel HorizontalAlignment="Center">
                    <RadioButton Margin="20,0,0,0">Крош</RadioButton>
                    <RadioButton Margin="20,0,0,0">Ёжик</RadioButton>
                    <RadioButton Margin="20,0,0,0">Барашь</RadioButton>
                    <RadioButton Margin="20,0,0,0">Совунья</RadioButton>
                    <RadioButton Margin="20,0,0,0">Лосяшь</RadioButton>
                </WrapPanel>
            </GroupBox>
            <Label HorizontalAlignment="Center">Кто из смешариков любит петь?</Label>
            <GroupBox>
                <GroupBox.Style>
                    <Style TargetType="GroupBox">
                        <Setter Property="BorderThickness" Value="0" />
                        <Setter Property="Padding" Value="5" />
                    </Style>
                </GroupBox.Style>
                <WrapPanel HorizontalAlignment="Center">
                    <RadioButton Margin="20,0,0,0">Крош</RadioButton>
                    <RadioButton Margin="20,0,0,0">Ёжик</RadioButton>
                    <RadioButton Margin="20,0,0,0">Барашь</RadioButton>
                    <RadioButton Margin="20,0,0,0">Совунья</RadioButton>
                    <RadioButton Margin="20,0,0,0">Лосяшь</RadioButton>
                </WrapPanel>
            </GroupBox>
            <Label HorizontalAlignment="Center">Какой смешарик всегда заботится о здоровье?</Label>
            <GroupBox>
                <GroupBox.Style>
                    <Style TargetType="GroupBox">
                        <Setter Property="BorderThickness" Value="0" />
                        <Setter Property="Padding" Value="5" />
                    </Style>
                </GroupBox.Style>
                <WrapPanel HorizontalAlignment="Center">
                    <RadioButton Margin="20,0,0,0">Крош</RadioButton>
                    <RadioButton Margin="20,0,0,0">Ёжик</RadioButton>
                    <RadioButton Margin="20,0,0,0">Барашь</RadioButton>
                    <RadioButton Margin="20,0,0,0">Совунья</RadioButton>
                    <RadioButton Margin="20,0,0,0">Лосяшь</RadioButton>
                </WrapPanel>
            </GroupBox>
            <Button MaxWidth="300" Margin="20,0">Сдать тест</Button>
        </StackPanel>
    </Grid>

</Window>
