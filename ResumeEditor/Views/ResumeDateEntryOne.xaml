<Window x:Class="WPF_Examen_21_03_2025.Views.ResumeDateEntryOne"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Examen_21_03_2025.Views"
        mc:Ignorable="d"
        Title="ResumeDateEntryOne" Height="450" Width="750">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBlock Grid.ColumnSpan="3" HorizontalAlignment="Center" VerticalAlignment="Center" Text="Заполните личные данные"
               FontSize="30" FontWeight="Bold"/>
        <StackPanel Grid.Column="0" Grid.Row="1" Margin="10">
            <TextBlock Text="Фамилия" Style="{StaticResource StyleResumeFontTextBlock}"/>
            <TextBlock Text="Имя" Style="{StaticResource StyleResumeFontTextBlock}"/>
            <TextBlock Text="Возраст" Style="{StaticResource StyleResumeFontTextBlock}"/>
            <TextBlock Text="город проиживания" Style="{StaticResource StyleResumeFontTextBlock}"/>
            <TextBlock Text="Телефон" Style="{StaticResource StyleResumeFontTextBlock}"/>
            <TextBlock Text="Email" Style="{StaticResource StyleResumeFontTextBlock}"/>
            <TextBlock Text="Желаемая должность" Style="{StaticResource StyleResumeFontTextBlock}"/>
            <TextBlock Text="Фотография" Style="{StaticResource StyleResumeFontTextBlock}"/>
        </StackPanel>
        <StackPanel Grid.Column="1" Grid.Row="1" Margin="10">
            <TextBox x:Name="SecondName" Text="{Binding SecondName}" Style="{StaticResource StyleResumeFontTextBox}"/>
            <TextBox x:Name="FirstName" Text="{Binding FirstName}" Style="{StaticResource StyleResumeFontTextBox}"/>
            <TextBox x:Name="Age" Text="{Binding Age}" Style="{StaticResource StyleResumeFontTextBox}"/>
            <TextBox x:Name="CityResidence" Text="{Binding CityResidence}" Style="{StaticResource StyleResumeFontTextBox}"/>
            <TextBox x:Name="Phone" Text="{Binding Phone}" Style="{StaticResource StyleResumeFontTextBox}"/>
            <TextBox x:Name="Email" Text="{Binding Email}" Style="{StaticResource StyleResumeFontTextBox}"/>
            <TextBox x:Name="DesiredPosition" Text="{Binding DesiredPosition}" Style="{StaticResource StyleResumeFontTextBox}"/>
            <Viewbox>
                <StackPanel Orientation="Horizontal">
                    <TextBox Text="{Binding Photo}" Style="{StaticResource StyleResumeFontTextBox}" Width="150" x:Name="SelectPhoto"/>
                    <Button Content="выбрать" Margin="15, 0, 0, 0" Click="Button_Click_SelectPhoto"/>
                </StackPanel>
            </Viewbox>
        </StackPanel>
        <Image Grid.Column="2" Grid.Row="1" Source="{Binding Photo, UpdateSourceTrigger=Explicit}" x:Name="PhotoImage"/>

        <Button Grid.Column="0" Grid.Row="2" Content="Назад" FontSize="25" Margin="10" Click="Button_ClickBack"/>
        <Button Grid.Column="1" Grid.Row="2" Content="Далее" FontSize="25" Margin="10" Click="Button_ClickLater"/>
        <Button Grid.Row="3" Grid.ColumnSpan="2" Content="Создать новое резюме" FontSize="25" Margin="10" Click="Button_Click_NewResume"/>
    </Grid>
</Window>
