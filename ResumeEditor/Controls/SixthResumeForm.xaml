<UserControl x:Class="ResumeEditor.Controls.SixthResumeForm"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ResumeEditor.Controls"
                              VerticalAlignment="Top"
     Background="WhiteSmoke">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Border Grid.RowSpan="4" Background="Indigo"/>
        <Image Grid.Column="0" Margin="5" Height="150" HorizontalAlignment="Center" VerticalAlignment="Center" Source="{Binding Photo}"/>
        <StackPanel Grid.Column="0" Grid.Row="1" Grid.RowSpan="3">
            <StackPanel Style="{StaticResource StyleResumeStackPanelWhite}">
                <Image Height="24" Source="/Resources/Image/Контакты-Photoroom.png" Margin="0, 0, 5, 0"/>
                <TextBlock Text="Контакты"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="5">
                <Image Height="24" Source="/Resources/Image/телефон-Photoroom.png" Margin="0, 0, 5, 0"/>
                <TextBlock Text="{Binding Phone}" Margin="0, 0, 5, 0" FontSize="16" FontWeight="Bold"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="5">
                <Image Height="24" Source="/Resources/Image/Электронка.png" Margin="0, 0, 5, 0"/>
                <TextBlock Text="{Binding Email}" Margin="0, 0, 5, 0" FontSize="16" FontWeight="Bold"/>
            </StackPanel>
        </StackPanel>
        <StackPanel Grid.Column="1" Orientation="Vertical">
            <StackPanel Orientation="Horizontal" Margin="10">
                <TextBlock Text="{Binding SecondName}" FontSize="40" FontWeight="Bold" Margin="0, 0, 5, 0"/>
                <TextBlock Text="{Binding FirstName}" FontSize="40" FontWeight="Bold" Margin="0, 0, 5, 0"/>
            </StackPanel>
            <TextBlock Text="{Binding DesiredPosition}" FontSize="24" FontWeight="Bold" Margin="10"/>
            <StackPanel Orientation="Horizontal" Margin="10">
                <Image Height="24" Source="/Resources/Image/геолокация-Photoroom.png" Margin="0, 0, 5, 0"/>
                <TextBlock Text="{Binding CityResidence}" FontSize="20" Margin="0, 0, 20, 0"/>
                <Image Height="24" Source="/Resources/Image/инфо-Photoroom.png" Margin="0, 0, 5, 0"/>
                <TextBlock Text="Возраст" FontSize="20" Margin="0, 0, 5, 0"/>
                <TextBlock Text="{Binding Age}" FontSize="20" Margin="0, 0, 5, 0"/>
                <TextBlock Text="лет"  FontSize="20" Margin="0, 0, 5, 0"/>
            </StackPanel>
        </StackPanel>
        <StackPanel Grid.Column="1" Grid.Row="1" Margin="10">
            <StackPanel Style="{StaticResource StyleResumeStackPanelWhite}">
                <Image Height="24" Source="/Resources/Image/портфель.png" Margin="0, 0, 5, 0"/>
                <TextBlock Text="Опыт работы"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Text="Место работы" Margin="0, 0, 5, 0" FontSize="16" FontWeight="Bold"/>
                <TextBlock Text="{Binding CompanyWork}" Margin="0, 0, 5, 0" FontSize="20" FontWeight="Bold"/>
                <TextBlock Text="{Binding GettingStartWork, StringFormat='MMMM yyyy'}" FontSize="16" Margin="0, 0, 5, 0"/>
                <TextBlock Text="-" Margin="0, 0, 5, 0" FontSize="16"/>
                <TextBlock Text="{Binding EndWork, StringFormat='MMMM yyyy'}" FontSize="16" Margin="0, 0, 5, 0"/>
            </StackPanel>
            <TextBlock Text="{Binding PositionWork}" Margin="0, 10, 5, 10" FontSize="20" FontStyle="Italic"/>
            <TextBlock Text="{Binding DescriptionLastWork}" FontSize="16" FontFamily="Arial"/>
        </StackPanel>
        <StackPanel Grid.Column="1" Grid.Row="2" Margin="10">
            <StackPanel Style="{StaticResource StyleResumeStackPanelWhite}">
                <Image Height="24" Source="/Resources/Image/Оброзование.png" Margin="0, 0, 5, 0"/>
                <TextBlock Text="Оброзование"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Text="Учебное заведение" Margin="0, 0, 5, 0" FontSize="16" FontWeight="Bold"/>
                <TextBlock Text="{Binding EducationInstitution}" Margin="0, 0, 5, 0" FontSize="20" FontWeight="Bold"/>
                <TextBlock Text="-" Margin="0, 0, 5, 0" FontSize="16"/>
                <TextBlock Text="{Binding BasicEducation}" Margin="0, 0, 15, 0" FontSize="20" FontWeight="Bold"/>
                <TextBlock Text="Год окончания" Margin="0, 0, 5, 0" FontSize="16"/>
                <TextBlock Text="{Binding EndEducation, StringFormat='yyyy'}" FontSize="16" Margin="0, 0, 5, 0"/>
            </StackPanel>
            <TextBlock Text="Факультет:" Margin="0, 0, 5, 0" FontSize="18"/>
            <TextBlock Text="{Binding Faculty}" Margin="15, 0, 5, 0" FontSize="16" FontStyle="Italic"/>
            <TextBlock Text="Специальность:" Margin="0, 0, 5, 0" FontSize="18"/>
            <TextBlock Text="{Binding Specialitu}" Margin="15, 0, 5, 0" FontSize="16" FontStyle="Italic"/>
        </StackPanel>
        <StackPanel Grid.Column="1" Grid.Row="3" Margin="10">
            <StackPanel Style="{StaticResource StyleResumeStackPanelWhite}">
                <Image Height="24" Source="/Resources/Image/О_себе.png" Margin="0, 0, 5, 0"/>
                <TextBlock Text="О себе"/>
            </StackPanel>
            <TextBlock Text="{Binding AboutMe}" FontSize="16" FontFamily="Arial"/>
        </StackPanel>
    </Grid>
</UserControl>
