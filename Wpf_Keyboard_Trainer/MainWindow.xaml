                </Border>
                <Border CornerRadius="10" Width="50" Height="50" Margin="3" Background="#F289F0" BorderThickness="2" BorderBrush="Black">
                    <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="30" Text="h" FontWeight="Bold"/>
                </Border>
                <Border CornerRadius="10" Width="50" Height="50" Margin="3" Background="#F289F0" BorderThickness="2" BorderBrush="Black">
                    <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="30" Text="j" FontWeight="Bold"/>
                </Border>
                <Border CornerRadius="10" Width="50" Height="50" Margin="3" Background="LightCoral" BorderThickness="2" BorderBrush="Black">
                    <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="30" Text="k" FontWeight="Bold"/>
                </Border>
                <Border CornerRadius="10" Width="50" Height="50" Margin="3" Background="#F8FBD0" BorderThickness="2" BorderBrush="Black">
                    <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="30" Text="l" FontWeight="Bold"/>
                </Border>
                <Border CornerRadius="10" Width="50" Height="50" Margin="3" Background="#90ED96" BorderThickness="2" BorderBrush="Black">
                    <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="30" Text=";" FontWeight="Bold"/>
                </Border>
                <Border CornerRadius="10" Width="50" Height="50" Margin="3" Background="#90ED96" BorderThickness="2" BorderBrush="Black">
                    <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="30" Text="'" FontWeight="Bold"/>
                </Border>
                <Border CornerRadius="10" Width="106" Height="50" Margin="3" Background="#D3D3D3" BorderThickness="2" BorderBrush="Black">
                    <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20" Text="Enter" FontWeight="Bold"/>
                </Border>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Border CornerRadius="10" Width="134" Height="50" Margin="3" Background="#D3D3D3" BorderThickness="2" BorderBrush="Black">
                    <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20" Text="Shift" FontWeight="Bold"/>
                </Border>
                <Border CornerRadius="10" Width="50" Height="50" Margin="3" Background="LightCoral" BorderThickness="2" BorderBrush="Black">
                    <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="30" Text="z" FontWeight="Bold"/>
                </Border>
                <Border CornerRadius="10" Width="50" Height="50" Margin="3" Background="#F8FBD0" BorderThickness="2" BorderBrush="Black">
                    <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="30" Text="x" FontWeight="Bold"/>
                </Border>
                <Border CornerRadius="10" Width="50" Height="50" Margin="3" Background="#90ED96" BorderThickness="2" BorderBrush="Black">
                    <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="30" Text="c" FontWeight="Bold"/>
                </Border>
                <Border CornerRadius="10" Width="50" Height="50" Margin="3" Background="#ABDAE6" BorderThickness="2" BorderBrush="Black">
                    <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="30" Text="v" FontWeight="Bold"/>
                </Border>
                <Border CornerRadius="10" Width="50" Height="50" Margin="3" Background="#ABDAE6" BorderThickness="2" BorderBrush="Black">
                    <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="30" Text="b" FontWeight="Bold"/>
                </Border>
                <Border CornerRadius="10" Width="50" Height="50" Margin="3" Background="#F289F0" BorderThickness="2" BorderBrush="Black">
                    <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="30" Text="n" FontWeight="Bold"/>
                </Border>
                <Border CornerRadius="10" Width="50" Height="50" Margin="3" Background="#F289F0" BorderThickness="2" BorderBrush="Black">
                    <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="30" Text="m" FontWeight="Bold"/>
                </Border>
                <Border CornerRadius="10" Width="50" Height="50" Margin="3" Background="LightCoral" BorderThickness="2" BorderBrush="Black">
                    <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="30" Text="," FontWeight="Bold"/>
                </Border>
                <Border CornerRadius="10" Width="50" Height="50" Margin="3" Background="#F8FBD0" BorderThickness="2" BorderBrush="Black">
                    <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="30" Text="." FontWeight="Bold"/>
                </Border>
                <Border CornerRadius="10" Width="50" Height="50" Margin="3" Background="#90ED96" BorderThickness="2" BorderBrush="Black">
                    <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="30" Text="/" FontWeight="Bold"/>
                </Border>
                <Border CornerRadius="10" Width="134" Height="50" Margin="3" Background="#D3D3D3" BorderThickness="2" BorderBrush="Black">
                    <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20" Text="Shift" FontWeight="Bold"/>
                </Border>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Border CornerRadius="10" Width="68" Height="50" Margin="3" Background="#D3D3D3" BorderThickness="2" BorderBrush="Black">
                    <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20" Text="Ctr" FontWeight="Bold"/>
                </Border>
                <Border CornerRadius="10" Width="68" Height="50" Margin="3" Background="#D3D3D3" BorderThickness="2" BorderBrush="Black">
                    <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20" Text="Win" FontWeight="Bold"/>
                </Border>
                <Border CornerRadius="10" Width="68" Height="50" Margin="3" Background="#D3D3D3" BorderThickness="2" BorderBrush="Black">
                    <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20" Text="Alt" FontWeight="Bold"/>
                </Border>
                <Border CornerRadius="10" Width="390" Height="50" Margin="3" Background="#FFA07A" BorderThickness="2" BorderBrush="Black">
                    <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20" Text="Space" FontWeight="Bold"/>
