                </Border>
                <Border CornerRadius="10" Width="50" Height="50" Margin="3" Background="LightCoral" BorderThickness="2" BorderBrush="Black">
                    <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="30" Text="i" FontWeight="Bold"/>
                </Border>
                <Border CornerRadius="10" Width="50" Height="50" Margin="3" Background="#F8FBD0" BorderThickness="2" BorderBrush="Black">
                    <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="30" Text="o" FontWeight="Bold"/>
                </Border>
                <Border CornerRadius="10" Width="50" Height="50" Margin="3" Background="#90ED96" BorderThickness="2" BorderBrush="Black">
                    <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="30" Text="p" FontWeight="Bold"/>
                </Border>
                <Border CornerRadius="10" Width="50" Height="50" Margin="3" Background="#90ED96" BorderThickness="2" BorderBrush="Black">
                    <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="30" Text="[" FontWeight="Bold"/>
                </Border>
                <Border CornerRadius="10" Width="50" Height="50" Margin="3" Background="#90ED96" BorderThickness="2" BorderBrush="Black">
                    <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="30" Text="]" FontWeight="Bold"/>
                </Border>
                <Border CornerRadius="10" Width="78" Height="50" Margin="3" Background="#90ED96" BorderThickness="2" BorderBrush="Black">
                    <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="30" Text="\" FontWeight="Bold"/>
                </Border>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Border CornerRadius="10" Width="106" Height="50" Margin="3" Background="#D3D3D3" BorderThickness="2" BorderBrush="Black">
                    <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20" Text="Caps Lock" FontWeight="Bold"/>
                </Border>
                <Border CornerRadius="10" Width="50" Height="50" Margin="3" Background="LightCoral" BorderThickness="2" BorderBrush="Black">
                    <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="30" Text="a" FontWeight="Bold"/>
                </Border>
                <Border CornerRadius="10" Width="50" Height="50" Margin="3" Background="#F8FBD0" BorderThickness="2" BorderBrush="Black">
                    <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="30" Text="s" FontWeight="Bold"/>
                </Border>
                <Border CornerRadius="10" Width="50" Height="50" Margin="3" Background="#90ED96" BorderThickness="2" BorderBrush="Black">
                    <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="30" Text="d" FontWeight="Bold"/>
                </Border>
                <Border CornerRadius="10" Width="50" Height="50" Margin="3" Background="#ABDAE6" BorderThickness="2" BorderBrush="Black">
