<Window x:Class="Wpf_Keyboard_Trainer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf_Keyboard_Trainer"
        mc:Ignorable="d"
        Title="Keyboard Trainer" ResizeMode="NoResize" SizeToContent="WidthAndHeight">
    <Grid x:Name="MainFrid">
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="60"/>
            <RowDefinition Height="300"/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <StackPanel Grid.Column="0" Grid.Row="0" Orientation="Horizontal">
                <TextBlock Padding="5" VerticalAlignment="Center" FontSize="16" Text="Speed:"/>
                <TextBlock x:Name="CountSpeed" Padding="5" VerticalAlignment="Center" FontSize="16" Text="0"/>
                <TextBlock Padding="5" VerticalAlignment="Center" FontSize="16" Text="chars/min"/>
            </StackPanel>
            <StackPanel Grid.Column="1" Grid.Row="0" Orientation="Horizontal">
                <TextBlock Padding="5" VerticalAlignment="Center" FontSize="16" Text="Fails:"/>
                <TextBlock x:Name="CountFails" Padding="5" VerticalAlignment="Center" FontSize="16" Text="0"/>
            </StackPanel>
            <Grid Grid.Column="2" Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <StackPanel Orientation="Horizontal">
                    <TextBlock Padding="5" VerticalAlignment="Center" FontSize="16">Difficulty:</TextBlock>
                    <TextBlock x:Name="ValueDifficulty" VerticalAlignment="Center" Text="15" FontSize="16"></TextBlock>
                </StackPanel>
                <Slider x:Name="SliderDifficulty" Grid.Column="1" VerticalAlignment="Center" Value="15" Maximum="100" Minimum="5"/>
            </Grid>
            <CheckBox Grid.Column="3" Grid.Row="0" Content="Case Sensetive" Margin="5" VerticalAlignment="Center"/>
            <Button Grid.Column="2" Grid.Row="1" Margin="4" Content="Start"/>
            <Button Grid.Column="3" Grid.Row="1" Margin="4" Content="Stop"/>
        </Grid>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="67*"/>
                <ColumnDefinition Width="433*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <TextBox x:Name="TextValue" Grid.Row="0" Margin="0,2,0,2" Grid.ColumnSpan="2"/>
            <TextBox x:Name="InputText" Grid.Row="1" Margin="0,2,0,2" Grid.ColumnSpan="2"/>
        </Grid>
        <StackPanel Grid.Row="2">
            <StackPanel Orientation="Horizontal">
                <Border CornerRadius="10" Width="50" Height="50" Margin="3" Background="LightCoral" BorderThickness="2" BorderBrush="Black">
                    <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="30" Text="`" FontWeight="Bold"/>
                </Border>
                <Border CornerRadius="10" Width="50" Height="50" Margin="3" Background="LightCoral" BorderThickness="2" BorderBrush="Black">
                    <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="30" Text="1" FontWeight="Bold"/>
                </Border>
                <Border CornerRadius="10" Width="50" Height="50" Margin="3" Background="LightCoral" BorderThickness="2" BorderBrush="Black">
                    <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="30" Text="2" FontWeight="Bold"/>
                </Border>
                <Border CornerRadius="10" Width="50" Height="50" Margin="3" Background="#F8FBD0"  BorderThickness="2" BorderBrush="Black">
                    <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="30" Text="3" FontWeight="Bold"/>
                </Border>
                <Border CornerRadius="10" Width="50" Height="50" Margin="3" Background="#90ED96" BorderThickness="2" BorderBrush="Black">
                    <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="30" Text="4" FontWeight="Bold"/>
                </Border>
                <Border CornerRadius="10" Width="50" Height="50" Margin="3" Background="#ABDAE6" BorderThickness="2" BorderBrush="Black">
                    <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="30" Text="5" FontWeight="Bold"/>
                </Border>
                <Border CornerRadius="10" Width="50" Height="50" Margin="3" Background="#ABDAE6" BorderThickness="2" BorderBrush="Black">
                    <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="30" Text="6" FontWeight="Bold"/>
                </Border>
                <Border CornerRadius="10" Width="50" Height="50" Margin="3" Background="#F289F0" BorderThickness="2" BorderBrush="Black">
                    <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="30" Text="7" FontWeight="Bold"/>
                </Border>
                <Border CornerRadius="10" Width="50" Height="50" Margin="3" Background="#F289F0" BorderThickness="2" BorderBrush="Black">
                    <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="30" Text="8" FontWeight="Bold"/>
                </Border>
                <Border CornerRadius="10" Width="50" Height="50" Margin="3" Background="LightCoral" BorderThickness="2" BorderBrush="Black">
                    <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="30" Text="9" FontWeight="Bold"/>
                </Border>
                <Border CornerRadius="10" Width="50" Height="50" Margin="3" Background="#F8FBD0" BorderThickness="2" BorderBrush="Black">
                    <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="30" Text="0" FontWeight="Bold"/>
                </Border>
                <Border CornerRadius="10" Width="50" Height="50" Margin="3" Background="#90ED96" BorderThickness="2" BorderBrush="Black">
                    <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="30" Text="-" FontWeight="Bold"/>
                </Border>
                <Border CornerRadius="10" Width="50" Height="50" Margin="3" Background="#90ED96" BorderThickness="2" BorderBrush="Black">
                    <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="30" Text="=" FontWeight="Bold"/>
                </Border>
                <Border CornerRadius="10" Width="106" Height="50" Margin="3" Background="#D3D3D3" BorderThickness="2" BorderBrush="Black">
                    <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20" Text="Backspace" FontWeight="Bold"/>
                </Border>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Border CornerRadius="10" Width="78" Height="50" Margin="3" Background="#D3D3D3" BorderThickness="2" BorderBrush="Black">
                    <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="20" Text="Tab" FontWeight="Bold"/>
                </Border>
                <Border CornerRadius="10" Width="50" Height="50" Margin="3" Background="LightCoral" BorderThickness="2" BorderBrush="Black">
                    <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="30" Text="q" FontWeight="Bold"/>
                </Border>
                <Border CornerRadius="10" Width="50" Height="50" Margin="3" Background="#F8FBD0" BorderThickness="2" BorderBrush="Black">
                    <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="30" Text="w" FontWeight="Bold"/>
                </Border>
                <Border CornerRadius="10" Width="50" Height="50" Margin="3" Background="#90ED96" BorderThickness="2" BorderBrush="Black">
                    <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="30" Text="e" FontWeight="Bold"/>
                </Border>
                <Border CornerRadius="10" Width="50" Height="50" Margin="3" Background="#ABDAE6" BorderThickness="2" BorderBrush="Black">
                    <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="30" Text="r" FontWeight="Bold"/>
                </Border>
                <Border CornerRadius="10" Width="50" Height="50" Margin="3" Background="#ABDAE6" BorderThickness="2" BorderBrush="Black">
                    <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="30" Text="t" FontWeight="Bold"/>
